<script src="http://172.16.1.3:7897/socket.io/socket.io.js"></script>
<script type="text/javascript">
	$(function() {
		var socket = io.connect('http://172.16.1.3:7897');
		var name;

		socket.on('msg2', function(data) {
			alert(data);
		});

		$("#msg").keyup(function(e) {
			if (e.keyCode == 13) {
				name = $("#name").val();
				var txt = $("#msg").val();

				// msg라는 제목으로 서버에 전송
				socket.emit('msg', txt);
				$("#msg").val('');
			}
		});
	});
</script>
