<title>Insert title here</title>
<link rel="stylesheet" href="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.css" />
<script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
<script	src="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js"></script>
<script src="http://172.16.1.100:7897/socket.io/socket.io.js"></script>
<script type="text/javascript">
	$(function(){
		var socket = io.connect('http://172.16.1.100:7897');
		var name;
		// msg2라는 제목의 메세지 받으면
		socket.on('msg2', function(data){
			var td1 = $("<td></td>");
			var td2 = $("<td></td>").attr("class", "blank");
			var td3 = $("<td></td>");
			var br = $("<br>");
			if (data.n == name) {
				$(td3).append(data.n, br, data.t);
				$(td3).attr("class", "myMsg");
			} else {
				$(td1).append(data.n, br, data.t);
				$(td1).attr("class", "msg");
			}
			var tr = $("<tr></tr>").append(td1, td2, td3);
			$("table").append(tr);
		}); 
		 
		$("#msg").keyup(function(e){
			if(e.keyCode == 13){
				name = $("#name").val();
				var txt = $("#msg").val();
				// msg라는 제목으로 서버에 전송
				socket.emit('msg', {n:name, t:txt});
				
				$("#msg").val('');
			}
		});
	});
</script>
<style type="text/css">
table{
	width:100%;
}
.myMsg{
	width: 40%;
	background-color: #01579B;
	color:white;
	font-weight: 800;
	text-shadow: none;
	margin: 10px;
	padding: 10px;
}
.blank{
	width: 20%;
}
.msg{
	width: 40%;
	background-color: #FBC02D;
	font-weight: 800;
	text-shadow: none;
}
</style>
